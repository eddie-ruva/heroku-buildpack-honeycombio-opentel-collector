#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Fail fast
set -e
set -o pipefail

# Debug
set -x

# the location of the app
BUILD_DIR=$1
# a location the buildpack can use to cache build artifacts between builds.
CACHE_DIR=$2
# a directory that contains a file for each of the applicationâ€™s configuration variables.
ENV_DIR=$3

# Set buildpack dir
BUILDPACK_DIR=$(cd "$(dirname "$0")"; cd ..; pwd)

# Set pinned version
PINNED_VERSION="1.7.0"

# If a version hasn't been specified, use the pinned version
if [ -f "$ENV_DIR/OTELCOL_VERSION" ]; then
  VERSION=$(cat "$ENV_DIR/OTELCOL_VERSION")
else
  VERSION="$PINNED_VERSION"
fi

OTELCOL_BINARY="otelcol_hny"

# Download
if [ ! -f "$CACHE_DIR/${OTELCOL_BINARY}-${VERSION}" ] || [ -n "$NOCACHE_OTELCOL" ]; then
  echo "-----> Installing v${VERSION} of OpenTelemetry Collector"
  curl -sS -o "${OTELCOL_BINARY}-${VERSION}" https://github.com/honeycombio/opentelemetry-collector-configs/releases/download/v${VERSION}/${OTELCOL_BINARY}_${VERSION}_linux_amd64
  echo "-----> Downloaded OpenTelemetry Collector v${VERSION}"

  rm -f "$CACHE_DIR/${OTELCOL_BINARY}-*" || true
  chmod +x "${OTELCOL_BINARY}-${VERSION}"
  mv "${OTELCOL_BINARY}-${VERSION}" "$CACHE_DIR/${OTELCOL_BINARY}-${VERSION}"
else
  echo "-----> OpenTelemetry Collector v${VERSION} found in cache"
fi

# Copy binaries
mkdir -p "$BUILD_DIR/opentelemetry"
cp "$CACHE_DIR/${OTELCOL_BINARY}-${VERSION}" "$BUILD_DIR/opentelemetry/otelcol"

# Install the runner
echo "-----> Installing OpenTelemetry Collector runner"
mkdir -p "$BUILD_DIR/.profile.d"
cp "$BUILDPACK_DIR/extra/otelcol-runner.sh" "$BUILD_DIR/.profile.d/"
chmod +x "$BUILD_DIR/.profile.d/otelcol-runner.sh"
